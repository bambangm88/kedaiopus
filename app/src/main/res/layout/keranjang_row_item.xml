<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvKeranjang_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:layout_marginBottom="0dp"
    app:cardCornerRadius="3dp"
    app:cardElevation="2dp">


    <LinearLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/thumbnail_krj"
            android:layout_margin="10dp"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="false"
            android:src="@drawable/loading_shape"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="8dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/title_mkn_krj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="18sp"
                android:textStyle="bold" />



                <TextView
                    android:id="@+id/harga_krj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="15dp"
                    android:text="Harga" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">
               <Button
                    android:background="@color/toolbar"
                    android:textColor="#fff"
                    android:id="@+id/kurang_krj"
                    android:text="-"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <EditText
                    android:layout_marginLeft="5dp"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:text="1"
                    android:editable="false"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/etItem_krj"/>

                <Button
                    android:layout_marginLeft="5dp"
                    android:background="@color/toolbar"
                    android:id="@+id/tambah_krj"
                    android:textAlignment="center"
                    android:text="+"
                    android:textColor="#fff"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <ImageButton
                    android:id="@+id/delete_krj"
                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:layout_marginLeft="80dp"
                    android:elevation="4dp"
                    android:src="@drawable/ic_delete"
                    android:contentDescription="@string/description"/>
                </LinearLayout>



        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>